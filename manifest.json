{
  "manifest_version": 3,
  "name": "Life Timer",
  "version": "1.0",
  "description": "A countdown timer that visually represents time passed and time remaining using a grid.",

  "chrome_url_overrides": {
    "newtab": "src/index.html"
  },

  "permissions": ["storage"],

  "icons": {
    "16": "assets/Swarn.png",
    "48": "assets/Swarn.png",
    "128": "assets/Swarn.png"
  },

  "action": {
    "default_icon": {
      "16": "assets/Swarn.png",
      "48": "assets/Swarn.png",
      "128": "assets/Swarn.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  }
}
